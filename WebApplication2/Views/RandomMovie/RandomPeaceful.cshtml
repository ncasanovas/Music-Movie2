@using WebApplication2.Models;
@model WebApplication2.Models.Movie

@{
    ViewBag.Title = "RandomPeaceful";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<h2>Random Peaceful Movie</h2>



   <div class="containerPeaceful">
       
       <div class="row">
           <div class="col-md-12">
               <h4><b> @Html.DisplayFor(modelItem => Model.Name)</b></h4>
           </div>
       </div>
       <br>
        <div class="row">
            <div class="col-md-12">
                @Html.DisplayFor(modelItem => Model.Description)
            </div>
         </div>
       <br>
        <div class="row">
            <div class="col-md-12">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe  class="embed-responsive-item" src="https://www.youtube.com/embed/@Model.Link" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
                </div>
         </div>
    
   </div>


    <br />

    <ul class="nav navbar-nav navbar-left">

    <li>
        <button class="btn btn-default" onclick="location.href='/Peaceful/Choose'">Return to Peaceful</button>
    </li>



