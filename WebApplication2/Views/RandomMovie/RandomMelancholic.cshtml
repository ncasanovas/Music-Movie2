@using WebApplication2.Models;
@model WebApplication2.Models.Movie

@{
    ViewBag.Title = "RandomMelancholic";
}

<h2>Random Melancholic Movie</h2>

<div class="containerMelancholic">

    <div class="row">
        <div class="col-md-12">
            <h4> <b> @Html.DisplayFor(modelItem => Model.Name)</b></h4>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-12">
            @Html.DisplayFor(modelItem => Model.Description)
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-12">
            <iframe width="560" height="315" src="https://www.youtube.com/embed/@Model.Link" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
        </div>
    </div>
   

</div>


<br />

<ul class="nav navbar-nav navbar-left">

    <li>
        <button class="btn btn-default" onclick="location.href='/Melancholic/Choose'">Return to Melancholic</button>
    </li>



    <li>
        <button class="btn btn-default" onclick="location.href='/'">Return to Index</button>
    </li>


</ul>